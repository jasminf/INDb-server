doctype html
html
    head
        title= title
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
        link(href='/stylesheets/style_music.css' type='text/css' rel='stylesheet')
    body
        h3 Your search result:
        h1= title
        each artist in data
            h3=artist.name
            h3=artist.id
            img(src=artist.picture_xl)
            br
            form(method='POST' action='/user/artist/save_favorite')
                input(type="hidden" id="save" name="artistId" value=artist.id)
                button.btn.btn-primary(type='submit') save



